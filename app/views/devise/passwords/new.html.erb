<div class="rooms-panel panel panel-default">
  <div class="panel-heading text-center">
    <h4>Remind Password</h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal"} ) do |form| %>
      <%= devise_error_messages! %>
      <div class="form-group text-left">
        <%= form.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <%= form.submit 'Send password', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
