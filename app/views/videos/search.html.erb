<%= form_tag search_videos_path, method: :get do %>
  <%= text_field_tag "query", "", placeholder: "Search on YouTube", :autofocus => "autofocus" %>
  <%= submit_tag "Search", :class => "btn" %>
<% end %>

<% if @videos %>
  <% @videos.each do |video| %>
    <div>
      <%= form_for Video.new do |f| %>
        <%= f.hidden_field :youtube_id, value: video["id"] %>
        <%= f.hidden_field :title, value: video["title"] %>
        <%= video["title"] %>
        <%= f.submit "Add" %>
      <% end %>

      <%= image_tag "http://img.youtube.com/vi/#{video['id']}/0.jpg" %>
    </div>
  <% end %>
<% end %>
