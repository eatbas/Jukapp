<%= form_tag search_songs_path, method: :get do %>
  <%= text_field_tag "query", "", placeholder: "Search on YouTube", :autofocus => "autofocus" %>
  <%= submit_tag "Search", :class => "btn" %>
<% end %>

<% if @videos %>
  <% @videos.each do |v| %>
    <div>
      <%= v["title"] %> <br>
      <%= image_tag "http://img.youtube.com/vi/#{v['id']}/0.jpg" %>
    </div>
  <% end %>
<% end %>
