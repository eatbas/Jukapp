<!DOCTYPE html>
<html>
<head>
  <title>Jukapp</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= stylesheet_link_tag "http://vjs.zencdn.net/4.12/video-js.css" %>
  <%= javascript_include_tag "http://vjs.zencdn.net/4.12/video.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#E7E7E7">
</head>
<body>

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "navbar-brand" do %>
          <span class="glyphicon glyphicon-home"></span><span class="visible-md-inline visible-lg-inline"> Jukapp</span>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to settings_path do %>
              Leave
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= render "shared/flash_messages" %>
    <div class="row">
      <div class="col-lg-12">
        <%= yield %>
      </div>
    </div>
  </div>

  <%= render "shared/google_analytics" %>
</body>
</html>
