<!DOCTYPE html>
<html>
<head>
  <title>Jukapp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<p>
  <%= link_to "Next", next_video_path %>
  <%= link_to "Search", search_videos_path %>
  <%= link_to "Play", play_video_path %>
  <%= link_to "Statistics", videos_path %>
  <% if current_room %>
    Joined: <%= current_room.name %> (<%= link_to "leave?", leave_rooms_path %>)
  <% end %>
</p>

<%= yield %>

</body>
</html>
