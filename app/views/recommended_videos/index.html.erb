<%= render 'shared/searchbar' %>
<br>

<div class="panel-md panel panel-primary text-center" bind-class="{hidden: <%= @queued_videos.empty? %> }" id="queueHeader">
  <div class="panel-heading">
    <h4>Queue</h4>
  </div>
  <%= render 'shared/queued_videos_table', queued_videos: @queued_videos %>
</div>

<div class="panel-md panel panel-primary text-center">
  <div class="panel-heading"><h4>Pinned Videos</h4></div>
  <%= render 'shared/videos_table', videos: @recommended_videos, hide_favorites: true %>
</div>

<%= will_paginate @recommendedations, renderer: BootstrapPagination::Rails %>

<script>
  $(function() {
    var eventStream = new EventStream(<%= event_stream_params %>);
    eventStream.forQueue();
  });
</script>
